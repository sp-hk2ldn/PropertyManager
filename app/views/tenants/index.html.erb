<div class="page-header">
  <%= link_to new_tenant_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Tenant
  <% end %>
  <h1>Listing tenants</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Email</th>
            <th>Tel</th>
            <th>Lease commenced</th>
            <th>Lease end</th>
            <th>Property</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @tenants) do |tenant| %>
            <td><%= tenant.first_name %></td>
            <td><%= tenant.last_name %></td>
            <td><%= tenant.email %></td>
            <td><%= tenant.tel %></td>
            <td><%= tenant.lease_commenced %></td>
            <td><%= tenant.lease_end %></td>
            <td><%= tenant.property_id %></td>
            <td><%= link_to 'Show', tenant %></td>
        <td><%= link_to 'Edit', edit_tenant_path(tenant) %></td>
        <td><%= link_to 'Destroy', tenant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
