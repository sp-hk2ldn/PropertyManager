<%= form_for(@work, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @work.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@work.errors.count, "error") %> prohibited this work from being saved:</h4>

      <ul>
      <% @work.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :job_type, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :job_type, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :raised_date, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :raised_date, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :due_date, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :due_date, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :property_id, :class => "col-sm-2 control-label" %>

    <div class="col-sm-10">
      <%= f.collection_select :property_id, Property.all, :id, :address %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
