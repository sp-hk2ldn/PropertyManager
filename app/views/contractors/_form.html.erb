<%= form_for(@contractor, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @contractor.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@contractor.errors.count, "error") %> prohibited this contractor from being saved:</h4>

      <ul>
      <% @contractor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :company_name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :company_name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :industry_type, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :industry_type, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :tel, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :tel, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :jobs_completed, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :jobs_completed, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :jobs_feedback_good, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :jobs_feedback_good, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :jobs_feedback_bad, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :jobs_feedback_bad, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
